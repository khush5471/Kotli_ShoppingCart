<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="20dp"
    card_view:contentPadding="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="0dp">

        <ImageView

            android:id="@+id/imgProduct"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_margin="8dp"
            android:background="@color/black"
            android:padding="1dp"
            android:scaleType="centerCrop"
            card_view:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_shoe2"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="$125"
            android:textSize="15dp"
            android:textColor="@color/blue"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtProductName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:text="hello"
            android:textSize="25dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            card_view:layout_constraintTop_toTopOf="@id/imgProduct"
            card_view:layout_constraintStart_toEndOf="@id/imgProduct" />

        <TextView
            android:id="@+id/txtHelloWorld"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="hello world"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/dark_grey"
            card_view:layout_constraintStart_toStartOf="@id/txtProductName"
            card_view:layout_constraintTop_toBottomOf="@id/txtProductName" />

        <ImageView
            android:id="@+id/img_add_favorities"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:src="@drawable/ic_heart"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/txtHelloWorld"
            card_view:tint="@color/red" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="4.5"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:visibility="gone"
            android:textStyle="bold"
            card_view:layout_constraintBottom_toBottomOf="@id/img_add_favorities"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="@id/img_add_favorities" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:layout_constraintBottom_toBottomOf="@id/imgProduct"
            card_view:layout_constraintEnd_toEndOf="parent"

            android:padding="15dp">


            <TextView
                android:id="@+id/btnMinus"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:background="@drawable/bg_rippple_value"
                android:clickable="true"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtQuantity"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                card_view:layout_constraintBottom_toBottomOf="@id/btnMinus"
                card_view:layout_constraintStart_toEndOf="@id/btnMinus"
                card_view:layout_constraintTop_toTopOf="@id/btnMinus" />

            <TextView
                android:id="@+id/btnPlus"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="0dp"
                android:background="@drawable/bg_rippple_value"
                android:gravity="center"
                android:text="+"
                android:clickable="true"

                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                card_view:layout_constraintBottom_toBottomOf="@id/btnMinus"
                card_view:layout_constraintStart_toEndOf="@id/txtQuantity"
                card_view:layout_constraintTop_toTopOf="@id/btnMinus" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone">


        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:linksClickable="true"
            android:text="hello"
            android:textColor="#000"
            android:textSize="15dp"
            android:textStyle="bold"
            android:visibility="visible" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@id/name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_rippple"
            android:gravity="center"
            android:text="details"
            android:textStyle="bold" />
    </RelativeLayout>



</androidx.cardview.widget.CardView>
